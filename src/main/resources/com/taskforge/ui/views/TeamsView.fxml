<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskforge.ui.controllers.TeamsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Team Management">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- New Team Creation Section -->
        <VBox spacing="10.0" alignment="TOP_LEFT" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15; -fx-background-color: #f8f8f8; -fx-border-radius: 5;">
            <Label text="Create New Team" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <GridPane hgap="10.0" vgap="10.0">
                <Label text="Team Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="newTeamNameField" promptText="Enter team name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            </GridPane>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button text="Add Team" onAction="#handleAddTeam" />
                <Button text="Clear Form" onAction="#handleClearForm" />
            </HBox>
            <Label fx:id="newTeamMessageLabel" textFill="RED" wrapText="true" />
        </VBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Button text="Refresh Teams" onAction="#handleRefreshTeams" />
        </HBox>

        <TableView fx:id="teamsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="teamIdColumn" text="ID" prefWidth="50.0" />
                <TableColumn fx:id="teamNameColumn" text="Team Name" prefWidth="250.0" />
                <TableColumn fx:id="teamMembersColumn" text="Members" prefWidth="200.0" /> <!-- New column for members -->
                <TableColumn fx:id="teamActionsColumn" text="Actions" prefWidth="150.0" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Label fx:id="messageLabel" textFill="RED" wrapText="true" />
    </children>
</VBox>
