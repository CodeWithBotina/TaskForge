<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.taskforge</groupId>
    <artifactId>TaskForge</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <javafx.version>22</javafx.version>
        <!-- Retaining 0.0.8 for javafx-maven-plugin as it's known to be resolvable -->
        <javafx.plugin.version>0.0.8</javafx.plugin.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <dependency>
            <groupId>org.xerial</groupId>
            <artifactId>sqlite-jdbc</artifactId>
            <version>3.45.1.0</version>
        </dependency>
        <!-- SLF4J API and a simple implementation for logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>2.0.13</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>2.0.13</version>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>${maven.compiler.source}</release>
                </configuration>
            </plugin>

            <!-- JavaFX Maven Plugin for running and creating custom runtime images (jlink) -->
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>${javafx.plugin.version}</version>
                <configuration>
                    <mainClass>com.taskforge.ui.MainApp</mainClass>
                    <jlinkImageName>TaskForge-Runtime</jlinkImageName>
                    <jlinkZipName>TaskForge-Windows</jlinkZipName>
                    <launcher>TaskForge</launcher>
                    <options>
                        <option>--strip-debug</option>
                        <option>--compress=2</option>
                        <option>--no-header-files</option>
                        <option>--no-man-pages</option>
                    </options>
                    <runtimePathOption>MODULEPATH</runtimePathOption>
                </configuration>
                <executions>
                    <execution>
                        <id>default-cli</id>
                        <configuration>
                            <mainClass>com.taskforge.ui.MainApp</mainClass>
                        </configuration>
                    </execution>
                    <execution>
                        <id>jlink-build</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jlink</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Maven JAR Plugin to create the application JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.4.1</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>com.taskforge.ui.MainApp</mainClass>
                            <classpathPrefix>lib/</classpathPrefix>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <!-- Maven Dependency Plugin to copy dependencies into a 'lib' folder for the JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.6.1</version>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- JPackage Maven Plugin for creating native installers -->
            <plugin>
                <groupId>org.panteleyev</groupId>
                <artifactId>jpackage-maven-plugin</artifactId>
                <version>1.6.6</version>
                <configuration>
                    <name>TaskForge</name>
                    <appVersion>1.0.0</appVersion>
                    <vendor>TaskForge Team</vendor>
                    <mainClass>com.taskforge.ui.MainApp</mainClass>
                    <!-- Corrected: Use 'input' to specify application content for jpackage -->
                    <input>${project.build.directory}</input>
                    <!-- mainJar is now relative to the 'input' directory -->
                    <mainJar>${project.artifactId}-${project.version}.jar</mainJar>
                    <destination>${project.build.directory}/installers</destination>
                    <type>EXE</type>
                    <winShortcut>true</winShortcut>
                    <winMenu>true</winMenu>
                    <javaOptions>
                        <javaOption>-Xms256m</javaOption>
                        <javaOption>-Xmx1024m</javaOption>
                        <javaOption>-Dfile.encoding=UTF-8</javaOption>
                        <javaOption>-DredirectErrorOutputTo=TaskForge_error.log</javaOption>
                    </javaOptions>
                    <!-- Add modules if they are not part of the jlink image but needed by jpackage directly -->
                    <addModules>
                        <!-- Add any specific modules required by jpackage that aren't implicitly included -->
                        <!-- Example: <addModule>java.sql</addModule> if not automatically detected -->
                    </addModules>
                    <!-- Specify the jlink image to be used by jpackage -->
                    <runtimeImage>${project.build.directory}/TaskForge-Runtime</runtimeImage>
                </configuration>
                <executions>
                    <execution>
                        <id>default-jpackage</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jpackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Maven Javadoc Plugin for generating API documentation -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.6.3</version>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
